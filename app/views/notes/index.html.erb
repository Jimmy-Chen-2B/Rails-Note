<h1>Note List</h1>

<%= link_to "Add note", new_note_path %> 

<ul>
  <% @notes.each do |note| %>
    <li>
      <%= note.user.email %>
      <%= link_to note.title, note_path(note) %>
      <%= link_to "編輯", edit_note_path(note) %>
      <%= link_to "刪除", note_path(note),
                          method: 'delete',
                          data: { confirm: '確定嗎？', id: note.id }
                        %>
    </li>
    <% end %>
  </ul>

